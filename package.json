{
  "name": "@jbabin91/tsc-files",
  "version": "0.7.1",
  "description": "Run TypeScript compiler on specific files without ignoring tsconfig.json",
  "keywords": [
    "typescript",
    "tsc",
    "type-check",
    "lint-staged",
    "git-hooks",
    "pre-commit",
    "lefthook"
  ],
  "homepage": "https://github.com/jbabin91/tsc-files#readme",
  "bugs": {
    "url": "https://github.com/jbabin91/tsc-files/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jbabin91/tsc-files.git"
  },
  "license": "MIT",
  "author": "Jace Babin <jbabin91@gmail.com>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "import": "./dist/cli.js",
      "require": "./dist/cli.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "bin": {
    "tsc-files": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsdown",
    "postbuild": "pnpm format",
    "changeset:auto": "node scripts/generate-changeset.ts",
    "changeset:local-release": "pnpm changeset:version && pnpm changeset:release",
    "changeset:release": "pnpm build && changeset publish",
    "changeset:version": "changeset version && pnpm format && pnpm lint:md:fix",
    "check-exports": "attw --pack . --ignore-rules cjs-resolves-to-esm no-resolution",
    "clean": "rm -rf coverage dist node_modules reports test-profiles",
    "commit": "cz",
    "commit:lint": "commitlint --edit",
    "dev": "tsdown --watch",
    "env:pull": "pnpm dlx dotenv-vault@latest pull",
    "env:push": "pnpm dlx dotenv-vault@latest push",
    "format": "prettier -uwl --cache .",
    "format:check": "prettier -uc --cache .",
    "lint": "eslint . --max-warnings 0 --cache --cache-location node_modules/.cache/eslint/.eslintcache",
    "lint:fix": "eslint . --fix --cache --cache-location node_modules/.cache/eslint/.eslintcache",
    "lint:md": "markdownlint-cli2",
    "lint:md:fix": "markdownlint-cli2 --fix",
    "prepare": "lefthook install",
    "prepublishOnly": "pnpm test && pnpm build",
    "test": "vitest run --project=unit",
    "test:all": "vitest run",
    "test:coverage": "vitest run --project=unit --coverage",
    "test:integration": "vitest run --project=integration",
    "test:integration:watch": "vitest --project=integration",
    "test:profile:cpu": "NODE_OPTIONS='--cpu-prof --cpu-prof-dir=test-profiles' vitest run --project=unit",
    "test:profile:heap": "NODE_OPTIONS='--heap-prof --heap-prof-dir=test-profiles' vitest run --project=unit",
    "test:profile:slow": "vitest run --project=unit --reporter=verbose --test-timeout=1000",
    "test:profile:watch": "vitest --project=unit --reporter=verbose",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --project=unit",
    "tsc-files": "tsx src/cli.ts",
    "typecheck": "tsc --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "dependencies": {
    "@types/tmp": "^0.2.6",
    "cleye": "^1.3.4",
    "execa": "^9.6.0",
    "get-tsconfig": "^4.13.0",
    "kleur": "^4.1.5",
    "tinyglobby": "^0.2.15",
    "tmp": "^0.2.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.38.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^24.9.1",
    "@typescript/native-preview": "7.0.0-dev.20251026.1",
    "@vitest/coverage-v8": "^4.0.3",
    "@vitest/ui": "4.0.3",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-keys-plus": "^1.5.0",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^16.4.0",
    "lefthook": "^2.0.1",
    "markdownlint-cli2": "^0.18.1",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "publint": "^0.3.15",
    "tsdown": "^0.15.10",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.3"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": false
    }
  },
  "pnpm": {
    "overrides": {
      "vite@>=7.1.0 <7.1.11": ">=7.1.11"
    }
  },
  "packageManager": "pnpm@10.19.0+sha512.c9fc7236e92adf5c8af42fd5bf1612df99c2ceb62f27047032f4720b33f8eacdde311865e91c411f2774f618d82f320808ecb51718bfa82c060c4ba7c76a32b8",
  "engines": {
    "node": ">=22.21.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
