{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    "schedule:earlyMondays",
    ":maintainLockFilesMonthly",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)"
  ],
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "postUpdateOptions": ["pnpmDedupe"],
  "automerge": true,
  "platformAutomerge": true,
  "platformCommit": "enabled",
  "commitBody": "",
  "prConcurrentLimit": 5,
  "packageRules": [
    {
      "description": "Widen peerDependencies ranges instead of replacing them",
      "matchDepTypes": ["peerDependencies"],
      "rangeStrategy": "widen"
    }
  ]
}
