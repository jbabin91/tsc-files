{
  "eslint.useFlatConfig": true,
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "files.readonlyInclude": {
    "bun.lock": true,
    "pnpm-lock.yaml": true
  },
  "files.watcherExclude": {
    "bun.lock": true,
    "pnpm-lock.yaml": true
  },
  "search.exclude": {
    "bun.lock": true,
    "pnpm-lock.yaml": true
  },
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.autoImportFileExcludePatterns": [],
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.tsdk": "node_modules/typescript/lib",
  "markdownlint.config": {
    "MD001": false,
    "MD007": {
      "indent": 2
    },
    "MD012": false,
    "MD013": false,
    "MD024": false,
    "MD025": false,
    "MD026": false,
    "MD029": false,
    "MD033": false,
    "MD036": false,
    "MD037": false,
    "MD041": false,
    "MD046": {
      "style": "fenced"
    }
  }
}
