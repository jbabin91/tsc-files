{
  "name": "@jbabin91/tsc-files",
  "version": "0.5.0",
  "description": "Run TypeScript compiler on specific files without ignoring tsconfig.json",
  "keywords": [
    "typescript",
    "tsc",
    "type-check",
    "lint-staged",
    "git-hooks",
    "pre-commit",
    "lefthook"
  ],
  "homepage": "https://github.com/jbabin91/tsc-files#readme",
  "bugs": {
    "url": "https://github.com/jbabin91/tsc-files/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jbabin91/tsc-files.git"
  },
  "license": "MIT",
  "author": "Jace Babin <jbabin91@gmail.com>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "import": "./dist/cli.js",
      "require": "./dist/cli.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "bin": {
    "tsc-files": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown && pnpm format",
    "changeset:auto": "node scripts/generate-changeset.ts",
    "changeset:local-release": "pnpm changeset:version && pnpm changeset:release",
    "changeset:release": "pnpm build && changeset publish --access public",
    "changeset:version": "changeset version && pnpm format && pnpm lint:md:fix",
    "check-exports": "attw --pack . --ignore-rules cjs-resolves-to-esm no-resolution",
    "commit": "cz",
    "commit:lint": "commitlint --edit",
    "dev": "tsdown --watch",
    "format": "prettier -uwl --cache .",
    "format:check": "prettier -uc --cache .",
    "lint": "eslint . --max-warnings 0 --cache --cache-location node_modules/.cache/eslint/.eslintcache",
    "lint:fix": "eslint . --fix --cache --cache-location node_modules/.cache/eslint/.eslintcache",
    "lint:md": "markdownlint-cli2",
    "lint:md:fix": "markdownlint-cli2 --fix",
    "prepublishOnly": "pnpm test && pnpm build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-keys-plus": "^1.5.0",
    "eslint-plugin-unicorn": "^61.0.2",
    "globals": "^16.4.0",
    "lefthook": "^1.13.4",
    "markdownlint-cli2": "^0.18.1",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "publint": "^0.3.13",
    "tsdown": "^0.15.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": ">=5.9.2"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": false
    }
  },
  "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a",
  "engines": {
    "node": ">=22.20.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
